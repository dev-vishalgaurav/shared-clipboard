<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Web ID">

        <PreferenceScreen
            android:title="Unknown"
            android:key="passcode">
        </PreferenceScreen>

    </PreferenceCategory>
    <PreferenceCategory
        android:title="Email">
        <PreferenceScreen
            android:title="sample@sample.com"
            android:key="email">
        </PreferenceScreen>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Max Recorded Copies">

        <ListPreference
            android:key="text_clippings_max"
            android:title="Text Clippings Max"
            android:summary="Select the max number of clippings you want to keep."
            android:entries="@array/max_strings"
            android:entryValues="@array/max_values"
            android:dialogTitle="Text Clippings Max" />

        <ListPreference
            android:key="image_clippings_max"
            android:title="Image Clippings Max"
            android:summary="Select the max number of clippings you want to keep."
            android:entries="@array/max_strings"
            android:entryValues="@array/max_values"
            android:dialogTitle="Image Clippings Max" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Account Settings">

        <CheckBoxPreference
            android:key="disable_clipboard"
            android:title="Disable Clipboard Recordings"
            android:summary="Disable keeping track of clippings." />

        <PreferenceScreen
            android:title="Logout"
            android:key="logout"
            android:summary="Log out from you current session. Your account will not be deleted.">
        </PreferenceScreen>

    </PreferenceCategory>
    <PreferenceCategory
        android:title="Help">
        <PreferenceScreen
            android:title="Click here to launch the app tutorial!"
            android:key="help">
        </PreferenceScreen>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="About us">
        <PreferenceScreen
            android:title="Click here to launch the app webpage."
            android:key="about">
        </PreferenceScreen>
    </PreferenceCategory>

</PreferenceScreen>